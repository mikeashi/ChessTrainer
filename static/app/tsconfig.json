{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "target": "ES6",
    "module": "commonjs",
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": [
      "DOM",
      "ES6"
    ],
    "outDir": "js/"
  },
  "include": [
    "src/*.ts"
  ],
  "types": [
    "node"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
